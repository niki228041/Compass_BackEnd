@page "/ResetPassword"
@model Compass.API.Pages.ResetPasswordModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <style>
        .for-input {
            width: 300px;
        }

        .mid{
            margin:auto;
        }
    </style>

</head>
<body>
    <h1 style="text-align:center">Reset your password</h1>
    <form action="/api/User/resetpassword" method="post">
        <input type="hidden" name="Token" value="@Request.Query["Token"]" />
        <input type="hidden" name="Email" value="@Request.Query["Email"]" />
        <table class="mid">
            <tr>
                <td>
                    <div class="form-group">
                        <label for="password-first" class="form-label mt-4">New Password</label>
                        <input type="password" id="password-first" class="form-control for-input" name="NewPassword" aria-describedby="emailHelp" placeholder="Enter password">
                        <small class="form-text text-muted">We'll never share your password with anyone else.</small>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <label for="password-second" class="form-label mt-4">Confirm Password</label>
                        <input type="password" id="password-second" class="form-control for-input" name="ConfirmPassword" aria-describedby="emailHelp" placeholder="Enter same password">
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <button type="submit" value="Reset" class="btn btn-primary">Ready</button>
                </td>
            </tr>
        </table>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>